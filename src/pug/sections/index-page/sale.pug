include ../../mixins/bitrix-contain-title
include ../../mixins/main-btn

section.lw-section.sale
  .lw-container
    +bitrix-contain-title({
      tag: 'h2',
      prolog: 'Акции и предложения',
      bitrixLogoExcluded: true,
      cls: 'visually-hidden'
    })

    .swiper-container.main-slider-container
      .swiper.main-slider
        .swiper-wrapper
          .swiper-slide
            img(src="./assets/img/sale/1.png" alt="название акции" title="название акции" width="1500" height="560")
          .swiper-slide
            img(src="./assets/img/sale/2.png" alt="название акции" title="название акции" width="1500" height="560")

      .swiper-button-prev
      .swiper-button-next
